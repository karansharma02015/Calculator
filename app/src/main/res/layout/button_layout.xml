<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Colourprimarydark"
    >


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"

        >

        <Button
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="C"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/power_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="^"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/percent_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="%"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/div_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="/"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/seven_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="7"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/eight_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="8"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
        android:id="@+id/nine_button"
        android:layout_width="wrap_content"
        android:height="110dp"
        android:text="9"
        android:textColor="@color/white"
        android:backgroundTint="@color/Colourprimarydark"
        android:textSize="45dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:onClick="onButtonClicked"
        >

    </Button>

        <Button
        android:id="@+id/multiply_button"
        android:layout_width="wrap_content"
        android:height="110dp"
        android:text="*"
        android:textColor="@color/white"
        android:backgroundTint="@color/Colourprimarydark"
        android:textSize="45dp"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:onClick="onButtonClicked"
        >

    </Button>

        <Button
            android:id="@+id/four_button"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="4"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/five_button"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="5"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/six_button"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="6"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/subtraction_button"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="-"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/one_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/two_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="2"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/three_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="3"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/addition_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="+"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/zero_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="0"
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/point_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="."
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimarydark"
            android:textSize="45dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            >

        </Button>

        <Button
            android:id="@+id/equal_button"
            android:layout_width="wrap_content"
            android:height="110dp"
            android:text="="
            android:textColor="@color/white"
            android:backgroundTint="@color/Colourprimary"
            android:textSize="45dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            android:layout_columnSpan="2"
            >

        </Button>

    </GridLayout>


</RelativeLayout>